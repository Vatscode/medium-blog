generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model post {
  id        String   @id
  title     String
  content   String
  published Boolean  @default(false)
  authorId  String
  createdAt DateTime @default(now())
  user      user     @relation(fields: [authorId], references: [id])
}

model user {
  id       String  @id
  email    String  @unique
  name     String?
  password String
  posts    post[]
}
